# Makefile

HX_HL2SDK = ../hl2sdk-l4d2
HX_FLAGS = -DSOURCE_ENGINE=9

HX_INCLUDE = -I. \
	-I$(HX_HL2SDK)/public \
	-I$(HX_HL2SDK)/public/tier0 \
	-I$(HX_HL2SDK)/public/tier1 \
	-I$(HX_HL2SDK)/public/engine \
	-I$(HX_HL2SDK)/public/mathlib

HX_FLAGS += -DSE_EPISODEONE=1 \
	-DSE_DARKMESSIAH=2 \
	-DSE_ORANGEBOX=3 \
	-DSE_BLOODYGOODTIME=4 \
	-DSE_EYE=5 \
	-DSE_CSS=6 \
	-DSE_ORANGEBOXVALVE=7 \
	-DSE_LEFT4DEAD=8 \
	-DSE_LEFT4DEAD2=9 \
	-DSE_ALIENSWARM=10 \
	-DSE_PORTAL2=11 \
	-DSE_CSGO=12

HX_FLAGS += -DPOSIX \
	-D_LINUX \
	-Dstricmp=strcasecmp \
	-D_stricmp=strcasecmp \
	-D_strnicmp=strncasecmp \
	-Dstrnicmp=strncasecmp \
	-D_snprintf=snprintf \
	-D_vsnprintf=vsnprintf \
	-D_alloca=alloca \
	-Dstrcmpi=strcasecmp \
	-DNDEBUG \
	-Wall \
	-Werror \
	-Wno-implicit-int-float-conversion \
	-Wno-overloaded-virtual \
	-Wno-deprecated-register \
	-msse \
	-mfpmath=sse \
	-funroll-loops \
	-pipe \
	-fno-strict-aliasing \
	-fvisibility=hidden \
	-fvisibility-inlines-hidden \
	-fno-exceptions \
	-fno-rtti \
	-m32 \
	-O3
	

HX_LIB = build/l4dtoolz.o \
	build/memoryutils.o \
	$(HX_HL2SDK)/lib/linux/tier1_i486.a \
	libvstdlib_srv.so \
	libtier0_srv.so


all:
	mkdir -p build
	mkdir -p release/addons/l4dtoolz
	ln -sf $(HX_HL2SDK)/lib/linux/libvstdlib_srv.so libvstdlib_srv.so
	ln -sf $(HX_HL2SDK)/lib/linux/libtier0_srv.so libtier0_srv.so

	clang $(HX_INCLUDE) $(HX_FLAGS) -o build/l4dtoolz.o -c l4dtoolz.cpp
	clang $(HX_INCLUDE) $(HX_FLAGS) -o build/memoryutils.o -c memoryutils.cpp
	clang $(HX_INCLUDE) $(HX_LIB) -m32 -shared -static-libgcc -ldl -lm -o build/l4dtoolz.so

	cp l4dtoolz.txt build/l4dtoolz.so release/addons/l4dtoolz
	cp l4dtoolz.vdf release/addons

	rm -rf build

	